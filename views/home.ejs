<%- include("partials/header"); -%>

<h1>Home</h1>

<% if (posts && posts.length > 0) { %> <% posts.forEach(function(post){ %>
<h1><%= post.title %></h1>
<p>
  <%= post.content.substring(0, 100) + " ..." %>
  <a href="/posts/<%= post._id %>">Read More</a>
</p>
<% }) %> <% } else { %>
<h5><%= startingContent %></h5>
<% } %> <%- include("partials/footer"); -%>
